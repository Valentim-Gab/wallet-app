{
  "expo": {
    "name": "wallet-app",
    "slug": "wallet-app",
    "version": "1.0.0",

    "scheme": "wallet-app",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },

    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "black",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "black"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#000"
      }
    }
  }
}
